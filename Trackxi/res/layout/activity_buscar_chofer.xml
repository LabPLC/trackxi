<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InicioDeTrabajo" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/inicio_de_trabajo_iv_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/mi_taxi_assets_chofer" />

            <TextView
                android:id="@+id/inicio_de_trabajo_tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa el nombre del chofer"
                android:textColor="@color/generic_amarillo"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/inicio_de_trabajo_et_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:ems="100"
        android:hint="nombre"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:textColor="@color/generic_amarillo" >
        <requestFocus />
    </AutoCompleteTextView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/inicio_de_trabajo_et_placa"
        android:layout_below="@+id/inicio_de_trabajo_et_placa"
        android:layout_marginTop="20dp"
        android:background="@color/generic_amarillo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginTop="17dp"
        android:text="O ingresa la licencia"
        android:textColor="@color/generic_amarillo"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/inicio_de_trabajo_et_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="Licencia"
        android:textColor="@color/generic_amarillo" >
    </AutoCompleteTextView>

</RelativeLayout>